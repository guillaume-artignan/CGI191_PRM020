<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/description_plat_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_plat_detail"
        android:layout_marginTop="50dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/nom_plat_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/image_plat_detail"
        android:text="TextView"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/image_plat_detail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/plat1" />
</RelativeLayout>