<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="50dp"
        android:layout_weight="30"
        app:srcCompat="@drawable/logo" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/menu_avis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="menuAfficheAvis"
                app:srcCompat="@drawable/rate" />

            <ImageView
                android:id="@+id/menu_plats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="menuListePlats"
                app:srcCompat="@drawable/menu" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/menu_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="menuPosteAvis"
                app:srcCompat="@drawable/upload" />

            <ImageView
                android:id="@+id/menu_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="menuCarte"
                app:srcCompat="@drawable/contact" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/menu_takePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="menuTakePicture"
                app:srcCompat="@drawable/upload" />
        </TableRow>

    </TableLayout>
</LinearLayout>